<?xml version="1.0" encoding="UTF-8" ?>
<Page
    x:Class="LiMount.WinUI.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:LiMount.WinUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Content>
        <StackPanel
            HorizontalAlignment="Stretch"
            MaxWidth="720"
            Padding="32"
            Spacing="16"
            VerticalAlignment="Center">
            <TextBlock
                FontSize="24"
                Style="{StaticResource MyLabel}"
                Text="LiMount WinUI 3 NativeAOT Spike" />

            <TextBlock
                x:Name="StatusText"
                FontSize="16"
                TextWrapping="Wrap"
                Text="Ready to validate environment..." />

            <Button
                Click="OnValidateClicked"
                Content="Run environment validation"
                HorizontalAlignment="Left"
                Style="{StaticResource PrimaryAction}" />

            <TextBlock
                x:Name="DetailsText"
                FontSize="14"
                TextWrapping="Wrap"
                Text="" />
        </StackPanel>
    </Page.Content>
</Page>
