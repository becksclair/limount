<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="LiMount.WinUI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:LiMount.WinUI.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Palette -->
            <Color x:Key="PrimaryColor">#0078D4</Color>
            <Color x:Key="BackgroundColor">#F3F3F3</Color>
            <Color x:Key="SurfaceColor">#FFFFFF</Color>
            <Color x:Key="TextPrimaryColor">#000000</Color>
            <Color x:Key="TextSecondaryColor">#666666</Color>
            <Color x:Key="BorderColor">#CCCCCC</Color>
            <Color x:Key="SuccessColor">#107C10</Color>
            <Color x:Key="ErrorColor">#D13438</Color>

            <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
            <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}" />
            <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}" />
            <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}" />
            <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}" />
            <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}" />
            <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}" />
            <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}" />

            <!-- Converters -->
            <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
            <converters:SuccessToBrushConverter x:Key="SuccessToBrushConverter" />
            <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            <converters:CharToFormattedStringConverter x:Key="CharToFormattedStringConverter" />

            <!-- Typography -->
            <x:Double x:Key="AppFontSize">14</x:Double>

            <!-- Buttons -->
            <Style x:Key="ModernButton" TargetType="Button">
                <Setter Property="Background" Value="{StaticResource PrimaryBrush}" />
                <Setter Property="Foreground" Value="White" />
                <Setter Property="Padding" Value="16,8" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="BorderThickness" Value="0" />
                <Setter Property="CornerRadius" Value="4" />
            </Style>

            <!-- SecondaryButton - uses WinUI's built-in hover states via BasedOn -->
            <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
                <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Padding" Value="16,8"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="CornerRadius" Value="4"/>
            </Style>

            <!-- ModernComboBox -->
            <Style x:Key="ModernComboBox" TargetType="ComboBox">
                <Setter Property="Padding" Value="8,6"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                <Setter Property="HorizontalContentAlignment" Value="Left"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
